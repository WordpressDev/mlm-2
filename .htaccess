AddDefaultCharset UTF-8
ErrorDocument 404 /404

RewriteEngine on
RewriteBase /
RewriteCond %{SCRIPT_FILENAME} !-f
RewriteCond %{SCRIPT_FILENAME} !-d
RewriteRule ^(.*)$ /public_html/$1 [L]
RewriteRule ^$ /public_html/ [L]

